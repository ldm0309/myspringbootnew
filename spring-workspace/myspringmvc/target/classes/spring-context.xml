	<aop:config>
		<aop:pointcut expression="bean(*)" id="service"/>
		<aop:advisor advice-ref="logAdvice" pointcut-ref="service"/>
	</aop:config> -->
	<!-- 
	-->
	<context:component-scan base-package="lx.edu.springmvc"/>
	
	 
</beans>
